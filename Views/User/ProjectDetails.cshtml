@model TaskCollabration.Models.ViewModel
@{
    ViewData["Title"] = "Project";
    Layout = "~/Views/Shared/_Navbar.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Project Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link href="css/style.css" rel="stylesheet">
    <style>
        .project-header {
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .task-item {
            transition: 0.3s;
        }

            .task-item:hover {
                background-color: #f8f9fa;
                transform: translateY(-2px);
            }

        .task-text {
            font-weight: 500;
            font-size: 16px;
        }

        .task-item:last-child {
            border-bottom: none;
        }

        .discussion-box {
            max-height: 250px;
            overflow-y: auto;
            border: 1px solid #ddd;
        }

        .message {
            margin-bottom: 15px;
        }

        .message-user {
            font-size: 14px;
            color: #555;
        }

        .message-text {
            display: inline-block;
            max-width: 80%;
        }

        .message-input {
            border-radius: 20px;
            padding: 10px;
        }

        .message-input {
            width: 100%;
            border: 1px solid #ddd;
            padding: 8px;
            border-radius: 5px;
        }

        .bg-lightblue {
            background-color: #e3f2fd; /* Light Blue */
        }
    </style>
</head>
<body>

    <div class="container my-5">
        <div class="project-header mb-4">
            <h2>Project: @Model.Projects.ProjectName</h2>
            <p>@Model.Projects.Description</p>
            <span class="badge bg-success">@Model.Projects.Status</span>
            <span class="badge bg-danger">@Model.Projects.Priority</span>
            <p class="mt-2">Deadline: @Model.Projects.DueDate.ToString("yyyy-MM-dd")</p>
        </div>

      <!--  <h3>Tasks</h3>
        <ul>
            @foreach (var task in Model.Tasks)
            {
                <li>@task.Title - @task.Status</li>
            }
          </ul> -->


        <div class="row">
            <!-- Task List -->
