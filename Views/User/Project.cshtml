@model TaskCollabration.Models.UserModel
@{
    ViewData["Title"] = "Project";
    Layout = "~/Views/Shared/_Navbar.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Task Cards</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>
<body>

    <div class="container my-5">
        <div class="row g-4">
            <!-- Task Card 1 -->
            <div class="col-md-4">
                <div class="task-card p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="progress-circle">
                            <svg width="50" height="50">
                                <circle class="bg" cx="25" cy="25" r="20"></circle>
                                <circle class="progress" cx="25" cy="25" r="20" stroke="#4a90e2" stroke-dasharray="126" stroke-dashoffset="94"></circle>
                            </svg>
                            <div class="text-center" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); font-size: 14px;">25%</div>
                        </div>
                        <span class="status status-inprocess">In Process</span>
                    </div>
                    <h5 class="mt-3">Theme Development</h5>
                    <p>Preparing framework of block-based WordPress Theme.</p>
                    <div class="d-flex align-items-center">
                        <div class="avatar-group">
                            <img src="https://randomuser.me/api/portraits/women/1.jpg" alt="User">
                            <img src="https://randomuser.me/api/portraits/women/2.jpg" alt="User">
                        </div>
                        <span class="ms-auto priority priority-high">High</span>
                    </div>
                </div>
            </div>

            <!-- Task Card 2 -->
            <div class="col-md-4">
                <div class="task-card p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="progress-circle">
                            <svg width="50" height="50">
                                <circle class="bg" cx="25" cy="25" r="20"></circle>
                                <circle class="progress" cx="25" cy="25" r="20" stroke="#e44d26" stroke-dasharray="126" stroke-dashoffset="88"></circle>
                            </svg>
                            <div class="text-center" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); font-size: 14px;">30%</div>
                        </div>
                        <span class="status status-pending">Pending</span>
                    </div>
                    <h5 class="mt-3">Vuetify Dashboard in Admin</h5>
                    <p>Start development server and check Vue project in browser.</p>
                    <div class="d-flex align-items-center">
                        <div class="avatar-group">
                            <img src="https://randomuser.me/api/portraits/men/3.jpg" alt="User">
                            <img src="https://randomuser.me/api/portraits/men/4.jpg" alt="User">
                            <img src="https://randomuser.me/api/portraits/men/5.jpg" alt="User">
                        </div>
                        <span class="ms-auto priority priority-medium">Medium</span>
                    </div>
                </div>
            </div>

            <!-- Task Card 3 -->
            <div class="col-md-4">
                <div class="task-card p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="progress-circle">
                            <svg width="50" height="50">
                                <circle class="bg" cx="25" cy="25" r="20"></circle>
                                <circle class="progress" cx="25" cy="25" r="20" stroke="#ffcc00" stroke-dasharray="126" stroke-dashoffset="107"></circle>
                            </svg>
                            <div class="text-center" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); font-size: 14px;">15%</div>
                        </div>
                        <span class="status status-complete">Complete</span>
                    </div>
                    <h5 class="mt-3">WordPress Dashboard Plugins</h5>
                    <p>Customize your WordPress with smart plugins.</p>
                    <div class="d-flex align-items-center">
                        <div class="avatar-group">
                            <img src="https://randomuser.me/api/portraits/women/3.jpg" alt="User">
                            <img src="https://randomuser.me/api/portraits/women/4.jpg" alt="User">
                        </div>
                        <span class="ms-auto priority priority-low">Low</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
