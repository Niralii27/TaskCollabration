@model AdminTaskModel
@{
    ViewData["Title"] = "DeleteTask";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>DeleteTask</h1>

<div class="content-page">
    <div class="container-fluid">

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-wrap align-items-center justify-content-between breadcrumb-content">
                            <h5>Delete Task</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <form asp-action="DeleteTask" method="post">
            <div class="row">
                <div class="col-xl-3 col-lg-4">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between">
                            <div class="header-title">
                                <h4 class="card-title">Delete Task</h4>
                            </div>
                        </div>
                     
                    </div>
                </div>

                <div class="col-xl-9 col-lg-8">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between">
                            <div class="header-title">
                                <h4 class="card-title">Project Information</h4>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="new-user-info">
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        <label>Project ID:</label>
                                        <input type="text" class="form-control" asp-for="Id" readonly>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>User Name:</label>
                                        <input type="text" class="form-control" asp-for="UserId" readonly>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Project Title:</label>
                                        <input type="text" class="form-control" asp-for="Title" readonly>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Status:</label>
                                        <input type="text" class="form-control" asp-for="Status" readonly>
                                    </div>
                                    <div class="form-group col-md-12">
                                        <label>Description:</label>
                                        <textarea class="form-control" asp-for="Description" rows="3" readonly></textarea>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Priority:</label>
                                        <input type="text" class="form-control" asp-for="Priority" readonly>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Due Date:</label>
                                        <input type="date" class="form-control" asp-for="Date" readonly>
                                    </div>
                                    @* <div class="form-group col-md-12"> *@
                                    @*     <label>Team Members:</label> *@
                                    @*     <input type="text" class="form-control" asp-for="Members" readonly> *@
                                    @* </div> *@
                                    <div class="form-group col-md-12">
                                        <label>File Path:</label>
                                        <input type="text" class="form-control" asp-for="FilePath" readonly>
                                    </div>
                                </div>
                                <hr>
                                <button type="submit" class="btn btn-danger">Delete Project</button>
                                <a href="@Url.Action("Task", "Admin")" class="btn btn-secondary">Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>

        @if (TempData["msg"] != null)
        {
            <script>
                alert('@TempData["msg"].ToString();');
                window.location.href = "@Url.Action("Task", "Admin")";
            </script>
        }
    </div>
</div>
