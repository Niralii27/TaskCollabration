@model TaskCollabration.Models.AdminModel
@{
    ViewData["Title"] = "EditUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
<div class="content-page">
    <div class="container-fluid">
        <form asp-action="EditUser" asp-controller="Admin" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <div class="col-xl-3 col-lg-4">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between">
                            <div class="header-title">
                                <h4 class="card-title">Update User</h4>
                            </div>
                        </div>
                        <div class="card-body">
                           
                            <div class="form-group">
                                <label asp-for="UserRole">User Role:</label>
                                <select  class="selectpicker form-control" data-style="py-0"  asp-for="UserRole">
                                    <option>Select</option>
                                    <option>Web Designer</option>
                                    <option>Web Developer</option>
                                    <option>Tester</option>
                                    <option>Php Developer</option>
                                    <option>Ios Developer </option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-9 col-lg-8">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between">
                           
                        </div>
                        <div class="card-body">
                            <div class="new-user-info">
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        <label for="fname" asp-for="FirstName">First Name:</label>
                                        <input class="form-control" name="FirstName" asp-for="FirstName">
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="lname" asp-for="LastName">Last Name:</label>
                                        <input  class="form-control" asp-for="LastName">
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="add1" asp-for="StreetAddress1">Street Address 1:</label>
                                        <input class="form-control" asp-for="StreetAddress1">
                                        <span asp-validation-for="StreetAddress1" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="add2">Street Address 2:</label>
                                        <input class="form-control" asp-for="StreetAddress2">
                                        <span asp-validation-for="StreetAddress2" class="text-danger"></span>
                                    </div>

                                    <div class="form-group col-sm-12">
                                        <label asp-for="StreetAddress2">Type:</label>
                                        <select class="selectpicker form-control" data-style="py-0" asp-for="Type">
                                            <option>Select Country</option>
                                            <option>Admin</option>
                                            <option>User</option>
                                            <option>Team Leader</option>
                                        </select>
                                        <span asp-validation-for="Type" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="mobno">Mobile Number:</label>
                                        <input class="form-control" asp-for="MobileNumber">
                                        <span asp-validation-for="MobileNumber" class="text-danger"></span>
                                    </div>

                                    <div class="form-group col-md-6">
                                        <label for="email" asp-for="Email">Email:</label>
                                        <input class="form-control" asp-for="Email">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="pno" asp-for="Pincode">Pin Code:</label>
                                        <input class="form-control" asp-for="Pincode">
                                        <span asp-validation-for="Pincode" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-12">
                                        <label for="city" asp-for="City">Town/City:</label>
                                        <input class="form-control" asp-for="City">
                                        <span asp-validation-for="City" class="text-danger"></span>
                                    </div>
                                </div>
                                <hr>
                                

                                <button type="submit" value="Update" class="btn btn-primary">Update User</button>
        </form>
        @if (TempData["msg"] != null)
        {
            <script>
                alert('@TempData["msg"].ToString();');
                window.location.href = "@Url.Action("EditUser","Admin")";
            </script>
        }
    </div>
</div>
                </div>
            </div>
        </div>
    </div>
</div>