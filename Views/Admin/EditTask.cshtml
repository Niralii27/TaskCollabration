@model AdminTaskModel;

@{
    ViewData["Title"] = "EditTask";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>EditTask</h1>

<div class="content-page">
    <div class="container-fluid">

        <!-- Display Error Message -->
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <form asp-action="EditTask" asp-controller="Admin" method="post">
            <input type="hidden" asp-for="Id" />


            <div class="row justify-content-center">
                <div class="col-lg-8 col-md-10">
                    <div class="card shadow-lg border-0 rounded-4">

                        <!-- Card Header -->
                        <div class="card-header text-center bg-primary text-white rounded-top">
                            <h4 class="mb-0">Edit Task  </h4>
                        </div>

                        <!-- Form Body -->
                        <div class="card-body p-4">

                            <!-- Project ID -->
                            <div class="form-group">
                                <label class="font-weight-bold">Project ID</label>
                                <input asp-for="Id" class="form-control rounded-pill px-3" placeholder="Enter Project ID" />
                                <span asp-validation-for="Id" class="text-danger"></span>
                            </div>

                            <!-- User ID -->
                            <div class="form-group">
                                <label class="font-weight-bold">User ID</label>
                                <input asp-for="UserId" class="form-control rounded-pill px-3" placeholder="Enter User ID" />
                                <span asp-validation-for="UserId" class="text-danger"></span>
                            </div>

                            <!-- Title -->
                            <div class="form-group">
                                <label class="font-weight-bold">Title</label>
                                <input asp-for="Title" class="form-control rounded-pill px-3" placeholder="Enter title" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <!-- Description -->
                            <div class="form-group">
                                <label class="font-weight-bold">Description</label>
                                <textarea asp-for="Description" class="form-control px-3" rows="3" placeholder="Enter description"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <!-- Status -->
                            <div class="form-group">
                                <label class="font-weight-bold">Status</label>
                                <select asp-for="Status" class="form-control rounded-pill px-3">
                                    <option value="" disabled>-- Select Status --</option>
                                    <option value="Pending">Pending</option>
                                    <option value="In Progress">In Progress</option>
                                    <option value="Completed">Completed</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>

                            <!-- Priority -->
                            <div class="form-group">
                                <label class="font-weight-bold">Priority</label>
                                <select asp-for="Priority" class="form-control rounded-pill px-3">
                                    <option value="" disabled>-- Select Priority --</option>
                                    <option value="Low">Low</option>
                                    <option value="Medium">Medium</option>
                                    <option value="High">High</option>
                                </select>
                                <span asp-validation-for="Priority" class="text-danger"></span>
                            </div>

                            <!-- Date -->
                            <div class="form-group">
                                <label class="font-weight-bold">Date</label>
                                <input asp-for="Date" type="date" class="form-control rounded-pill px-3" />
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>

                            <!-- File Upload -->
                            <div class="form-group">
                                <label class="font-weight-bold">Upload File</label>
                                <input asp-for="FilePath" type="file" class="form-control px-3" />
                                <span asp-validation-for="FilePath" class="text-danger"></span>
                            </div>

                            <!-- Action Buttons -->
                            <div class="d-flex justify-content-center mt-3">
                                <button type="submit" class="btn btn-success rounded-pill px-4 mr-2">Update Project</button>
                                <a href="@Url.Action("Project", "Admin")" class="btn btn-secondary rounded-pill px-4">Cancel</a>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </form>

        @* <!-- Success Message --> *@
        @* @if (TempData["msg"] != null) *@
        @* { *@
        @*     <script> *@
        @*         alert('@TempData["msg"].ToString();'); *@
        @*         window.location.href = "@Url.Action("Project", "Admin")"; *@
        @*     </script> *@
        @* } *@
        <!-- Success Message -->
        @if (TempData["msg"] != null)
        {
            <div class="alert alert-success mt-3 text-center">@TempData["msg"]</div>
        }
    </div>
</div>