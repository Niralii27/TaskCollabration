@model ProjectModel;

@{
    ViewData["Title"] = "EditProject";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>EditProject</h1>

<div class="content-page">
    <div class="container-fluid">

        <!-- Display Error Message -->
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <form asp-action="EditProject" asp-controller="Admin" method="post">
            <input type="hidden" asp-for="Id" />


            <div class="row justify-content-center">
                <div class="col-lg-8 col-md-10">
                    <div class="card shadow-lg border-0 rounded-4">

                        <!-- Card Header -->
                        <div class="card-header text-center bg-primary text-white rounded-top">
                            <h4 class="mb-0">Edit Project</h4>
                        </div>

                        <!-- Form Body -->
                        <div class="card-body p-4">

                            <!-- Project Name -->
                            <div class="form-group">
                                <label class="font-weight-bold">Project Name</label>
                                <input asp-for="ProjectName" class="form-control rounded-pill px-3" placeholder="Enter project name" />
                                <span asp-validation-for="ProjectName" class="text-danger"></span>
                            </div>

                            <!-- Category Dropdown -->
                            <div class="form-group">
                                <label class="font-weight-bold">Category</label>
                                <select asp-for="Category" class="form-control rounded-pill px-3">
                                    <option value="" disabled>-- Select Category --</option>
                                    <option value="Android">Android</option>
                                    <option value="iOS">iOS</option>
                                    <option value="UI/UX Design">UI/UX Design</option>
                                    <option value="Development">Development</option>
                                </select>
                                <span asp-validation-for="Category" class="text-danger"></span>
                            </div>

                            <!-- Due Date -->
                            <div class="form-group">
                                <label class="font-weight-bold">Due Date</label>
                                <input asp-for="DueDate" type="date" class="form-control rounded-pill px-3" />
                                <span asp-validation-for="DueDate" class="text-danger"></span>
                            </div>

                            <!-- Members -->
                            <div class="form-group">
                                <label class="font-weight-bold">Team Members</label>
                                <input asp-for="Members" class="form-control rounded-pill px-3" placeholder="Enter names separated by commas" />
                                <span asp-validation-for="Members" class="text-danger"></span>
                            </div>

                            <!-- Action Buttons -->
                            <div class="d-flex justify-content-center mt-3">
                                <button type="submit" class="btn btn-success rounded-pill px-4 mr-2">Update Project</button>
                                <a href="@Url.Action("Project", "Admin")" class="btn btn-secondary rounded-pill px-4">Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>

        @* <!-- Success Message --> *@
        @* @if (TempData["msg"] != null) *@
        @* { *@
        @*     <script> *@
        @*         alert('@TempData["msg"].ToString();'); *@
        @*         window.location.href = "@Url.Action("Project", "Admin")"; *@
        @*     </script> *@
        @* } *@
        <!-- Success Message -->
        @if (TempData["msg"] != null)
        {
            <div class="alert alert-success mt-3 text-center">@TempData["msg"]</div>
        }
    </div>
</div>