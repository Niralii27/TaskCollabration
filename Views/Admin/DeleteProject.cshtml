@model ProjectModel
@{
    ViewData["Title"] = "DeleteProject";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>DeleteProject</h1>

<div class="content-page">
    <div class="container-fluid">

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-wrap align-items-center justify-content-between breadcrumb-content">
                            <h5>Delete Project</h5>
                            <div class="d-flex flex-wrap align-items-center justify-content-between">
                                <div class="pl-3 border-left btn-new">
                                    @* <a asp-action="AddProject" class="btn btn-primary">New Project</a> *@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <form asp-action="DeleteProject" method="post">
            <div class="row">
                <div class="col-xl-3 col-lg-4">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between">
                            <div class="header-title">
                                <h4 class="card-title">Delete Project</h4>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Category:</label>
                                <select name="Category" class="form-control" asp-for="Category">
                                    <option>Select</option>
                                    <option>Android</option>
                                    <option>iOS</option>
                                    <option>UI/UX Design</option>
                                    <option>Development</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-9 col-lg-8">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between">
                            <div class="header-title">
                                <h4 class="card-title">Project Information</h4>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="new-user-info">
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        <label>Project Name:</label>
                                        <input type="text" class="form-control" asp-for="ProjectName" placeholder="Project Name" readonly>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Due Date:</label>
                                        <input type="date" class="form-control" asp-for="DueDate" readonly>
                                    </div>
                                    <div class="form-group col-md-12">
                                        <label>Team Members:</label>
                                        <input type="text" class="form-control" asp-for="Members" placeholder="Team Members" readonly>
                                    </div>
                                </div>
                                <hr>
                                <button type="submit" class="btn btn-danger">Delete Project</button>
                                <a href="@Url.Action("Project", "Admin")" class="btn btn-secondary">Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        @if (TempData["msg"] != null)
        {
            <script>
                alert('@TempData["msg"].ToString();');
                window.location.href = "@Url.Action("Project", "Admin")";
            </script>
        }
    </div>
</div>
