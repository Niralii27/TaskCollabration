@model List<TaskCollabration.Models.AdminProjectModel>
@{
    // ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-page">
    <div class="container-fluid">
        <div class="row">


            <div class="col-md-6 col-lg-3">
                <div class="card card-block card-stretch card-height">
                    <div class="card-body">
                        <div class="top-block d-flex align-items-center justify-content-between">
                            <h5>Users</h5>
                            <span class="badge badge-primary">Total</span>
                        </div>
                        <h3><span class="counter">15</span></h3>
                        <div class="d-flex align-items-center justify-content-between mt-1">
                            <p class="mb-0">Active Users</p>
                            <span class="text-primary">75%</span>
                        </div>
                        <div class="iq-progress-bar bg-primary-light mt-2">
                            <span class="bg-primary iq-progress progress-1" data-percent="75"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="card card-block card-stretch card-height">
                    <div class="card-body">
                        <div class="top-block d-flex align-items-center justify-content-between">
                            <h5>Projects</h5>
                            <span class="badge badge-warning">Ongoing</span>
                        </div>
                        <h3><span class="counter">35</span></h3>
                        <div class="d-flex align-items-center justify-content-between mt-1">
                            <p class="mb-0">Completed</p>
                            <span class="text-warning">60%</span>
                        </div>
                        <div class="iq-progress-bar bg-warning-light mt-2">
                            <span class="bg-warning iq-progress progress-1" data-percent="60"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="card card-block card-stretch card-height">
                    <div class="card-body">
                        <div class="top-block d-flex align-items-center justify-content-between">
                            <h5>Team</h5>
                            <span class="badge badge-success">Members</span>
                        </div>
                        <h3><span class="counter">15</span></h3>
                        <div class="d-flex align-items-center justify-content-between mt-1">
                            <p class="mb-0">Active Members</p>
                            <span class="text-success">90%</span>
                        </div>
                        <div class="iq-progress-bar bg-success-light mt-2">
                            <span class="bg-success iq-progress progress-1" data-percent="90"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="card card-block card-stretch card-height">
                    <div class="card-body">
                        <div class="top-block d-flex align-items-center justify-content-between">
                            <h5>Tasks</h5>
                            <span class="badge badge-info">Pending</span>
                        </div>
                        <h3><span class="counter">12</span></h3>
                        <div class="d-flex align-items-center justify-content-between mt-1">
                            <p class="mb-0">Completed</p>
                            <span class="text-info">40%</span>
                        </div>
                        <div class="iq-progress-bar bg-info-light mt-2">
                            <span class="bg-info iq-progress progress-1" data-percent="40"></span>
                        </div>
                    </div>
                </div>
            </div>





            <div class="col-lg-12">
                <div class="card-transparent mb-0">
                    <div class="card-header d-flex align-items-center justify-content-between p-0 pb-3">
                        <div class="header-title">
                            <h4 class="card-title">Current Projects</h4>
                        </div>
                        <div class="card-header-toolbar d-flex align-items-center">
                            <div id="top-project-slick-arrow" class="slick-aerrow-block">
                            </div>
                        </div>
                    </div>



                    <div class="card-body p-0">
                        <ul class="list-unstyled row top-projects mb-0">



                            @if (Model != null && Model.Count > 0)
                            {
                                @foreach (var project in Model)
                                {
                                    <li class="col-lg-4">
                                        <div class="card">
                                            <div class="card-body">
                                                <h5 class="mb-3">@project.ProjectName</h5>
                                                <p class="mb-3"><i class="las la-calendar-check mr-2"></i>@project.DueDate.ToString("dd / MM / yyyy")</p>
                                                <div class="iq-progress-bar bg-secondary-light mb-4">
                                                    <span class="bg-secondary iq-progress progress-1" data-percent="65"></span>
                                                </div>
                                                <div class="d-flex align-items-center justify-content-between">
                                                    <div class="iq-media-group">
                                                        <span>@project.Members</span>
                                                    </div>
                                                    <div>
                                                        <a href="#" class="btn bg-secondary-light">@project.Category</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                }
                            }
                            else
                            {
                                <p>No projects available.</p>
                            }

                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- Page end  -->
    </div>
</div>
