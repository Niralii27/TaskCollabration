@model AdminTeamModel
@{
    ViewData["Title"] = "AddTeam";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Add Team</h1>

<div class="content-page">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <div class="d-flex flex-wrap align-items-center justify-content-between breadcrumb-content">
                    <h5>Add a New Team</h5>

                    <!-- Back Button -->
                    <div>
                        <a href="@Url.Action("Team", "Admin")" class="btn btn-primary">
                            <i class="fas fa-arrow-left"></i> Back to Team
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="card shadow-lg border-0 rounded-4">

                    <!-- Card Header -->
                    <div class="card-header text-center bg-primary text-white rounded-top">
                        <h4 class="mb-0">Add New Team</h4>
                    </div>

                    <!-- Scrollable Form Body -->
                    <div class="card-body p-4" style="max-height: 500px; overflow-y: auto;">
                        <form method="post" asp-action="AddTeam" enctype="multipart/form-data">

                            <!-- team Name -->
                            <div class="form-group">
                                <label class="font-weight-bold">Employee Name</label>
                                <input asp-for="TaskName" class="form-control rounded-pill px-3" placeholder="Enter Team Name" />
                                <span asp-validation-for="TaskName" class="text-danger"></span>
                            </div>

                            <!-- Assign To -->
                            <div class="form-group">
                                <label class="font-weight-bold">Phone Number</label>
                                <input asp-for="AssignTo" class="form-control rounded-pill px-3" placeholder="Enter Phone Number" />
                                <span asp-validation-for="AssignTo" class="text-danger"></span>
                            </div>

                            <!-- birth Date -->
                            <div class="form-group">
                                <label class="font-weight-bold">Birth Date</label>
                                <input asp-for="DueDate" type="date" class="form-control rounded-pill px-3" />
                                <span asp-validation-for="DueDate" class="text-danger"></span>
                            </div>

                            <!-- Category Dropdown -->
                            <div class="form-group">
                                <label class="font-weight-bold">Category</label>
                                <select asp-for="Category" class="form-control rounded-pill px-3">
                                    <option value="" disabled selected>-- Select Category --</option>
                                    <option value="Design">Design</option>
                                    <option value="Development">Development</option>
                                    <option value="Testing">Testing</option>
                                    <option value="Deployment">Deployment</option>
                                    <option value="Database Management">Database Management</option>
                                </select>
                                <span asp-validation-for="Category" class="text-danger"></span>
                            </div>

                            <!-- email -->
                            <div class="form-group">
                                <label class="font-weight-bold">Email</label>
                                <textarea asp-for="Description" class="form-control px-3" placeholder="Enter Email"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <!-- bio -->
                            <div class="form-group">
                                <label class="font-weight-bold">Bio</label>
                                <textarea asp-for="Checklist" class="form-control px-3" placeholder="Enter Bio"></textarea>
                                <span asp-validation-for="Checklist" class="text-danger"></span>
                            </div>

                            <!-- Attachments -->
                            <div class="form-group">
                                <label class="font-weight-bold">Profile Pic</label>
                                <input asp-for="Attachments" type="file" class="form-control px-3" />
                            </div>

                            <!-- Action Buttons -->
                            <div class="d-flex justify-content-center mt-3">
                                <button type="submit" class="btn btn-success rounded-pill px-4 mr-2">Save Task</button>
                                <a href="@Url.Action("Team", "Admin")" class="btn btn-secondary rounded-pill px-4">Cancel</a>
                            </div>
                        </form>

                        <!-- Success Message -->
                        @if (TempData["msg"] != null)
                        {
                            <div class="alert alert-success mt-3 text-center">@TempData["msg"]</div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
