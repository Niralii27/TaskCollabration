@model AdminTeamModel
@{
    ViewData["Title"] = "Delete Team Task";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Delete Team Task</h1>

<div class="content-page">
    <div class="container-fluid">

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-wrap align-items-center justify-content-between breadcrumb-content">
                            <h5>Delete Task</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <form asp-action="DeleteTeam" method="post">
            <div class="row">
                <!-- Left Panel: Category -->
                <div class="col-xl-3 col-lg-4">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between">
                            <div class="header-title">
                                <h4 class="card-title">Delete Task</h4>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Category:</label>
                                <select name="Category" class="form-control" asp-for="Category" disabled>
                                    <option>Select</option>
                                    <option>Bug Fix</option>
                                    <option>Feature Development</option>
                                    <option>Design</option>
                                    <option>Testing</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Right Panel: Task Information -->
                <div class="col-xl-9 col-lg-8">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between">
                            <div class="header-title">
                                <h4 class="card-title">Task Information</h4>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="new-user-info">
                                <div class="row">
                                    <!-- Task Name -->
                                    <div class="form-group col-md-6">
                                        <label>Task Name:</label>
                                        <input type="text" class="form-control" asp-for="TaskName" readonly>
                                    </div>

                                    <!-- Assign To -->
                                    <div class="form-group col-md-6">
                                        <label>Assign To:</label>
                                        <input type="text" class="form-control" asp-for="AssignTo" readonly>
                                    </div>

                                    <!-- Due Date -->
                                    <div class="form-group col-md-6">
                                        <label>Due Date:</label>
                                        <input type="date" class="form-control" asp-for="DueDate" readonly>
                                    </div>

                                    <!-- Description -->
                                    <div class="form-group col-md-12">
                                        <label>Description:</label>
                                        <textarea class="form-control" asp-for="Description" rows="2" readonly></textarea>
                                    </div>

                                    <!-- Checklist -->
                                    <div class="form-group col-md-12">
                                        <label>Checklist:</label>
                                        <textarea class="form-control" asp-for="Checklist" rows="2" readonly></textarea>
                                    </div>

                                    <!-- Attachments -->
                                    <div class="form-group col-md-12">
                                        <label>Attachments:</label>
                                        <input type="text" class="form-control" asp-for="Attachments" readonly>
                                        @if (!string.IsNullOrEmpty(Model.Attachments))
                                        {
                                            <div class="mt-2">
                                                <a href="@Model.Attachments" class="btn btn-link" target="_blank">View Attachment</a>
                                            </div>
                                        }
                                    </div>
                                </div>

                                <hr>

                                <!-- Action Buttons -->
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this task?');">
                                    <i class="fas fa-trash"></i> Delete Task
                                </button>
                                <a href="@Url.Action("Team", "Admin")" class="btn btn-secondary">
                                    <i class="fas fa-times"></i> Cancel
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>

        <!-- Success Message -->
        @if (TempData["msg"] != null)
        {
            <script>
                alert('@TempData["msg"].ToString();');
                window.location.href = "@Url.Action("Team", "Admin")";
            </script>
        }
    </div>
</div>
